# Persist Environment Configuration Template
# Copy this file to .env and update with your settings

# ================================
# Logging Configuration
# ================================

# Rust logging level (error, warn, info, debug, trace)
RUST_LOG=info

# Python logging level
PYTHONPATH=.

# ================================
# AWS S3 Configuration
# ================================

# AWS credentials for S3 storage backend
# These can also be configured via AWS CLI, IAM roles, or AWS credentials file
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS region for S3 operations
AWS_REGION=us-west-2

# Default S3 bucket name for snapshot storage
AWS_S3_BUCKET=my-persist-snapshots

# Custom S3 endpoint (optional) - useful for LocalStack or other S3-compatible services
# AWS_ENDPOINT_URL=http://localhost:4566

# ================================
# Persist Configuration
# ================================

# Default storage backend (disk or s3)
PERSIST_DEFAULT_STORAGE=disk

# Default local storage path for snapshots
PERSIST_DEFAULT_PATH=./snapshots

# ================================
# Development & Testing
# ================================

# Enable development features
PERSIST_DEV_MODE=false

# LocalStack configuration for S3 testing
# LOCALSTACK_ENDPOINT=http://localhost:4566

# Testing bucket name (different from production)
PERSIST_TEST_BUCKET=persist-test-snapshots

# ================================
# Observability
# ================================

# Prometheus metrics endpoint (if running metrics server)
# PROMETHEUS_ENDPOINT=http://localhost:9090

# Jaeger tracing endpoint (if using distributed tracing)
# JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Enable detailed performance metrics
PERSIST_METRICS_ENABLED=true

# ================================
# Python SDK Configuration
# ================================

# Python-specific logging configuration
PYTHON_LOG_LEVEL=INFO

# LangChain configuration (if using with LangChain)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langchain_key_here

# ================================
# Security Configuration
# ================================

# Enable integrity verification (recommended for production)
PERSIST_VERIFY_INTEGRITY=true

# Maximum snapshot file size (in bytes)
PERSIST_MAX_FILE_SIZE=104857600  # 100MB

# ================================
# Performance Tuning
# ================================

# Number of retry attempts for S3 operations
PERSIST_S3_MAX_RETRIES=3

# Timeout for S3 operations (in seconds)
PERSIST_S3_TIMEOUT=30

# Compression level (1-9, higher = better compression but slower)
PERSIST_COMPRESSION_LEVEL=6

# ================================
# Notes
# ================================

# 1. Remove the "_example" suffix and rename this file to ".env"
# 2. Update the values with your actual configuration
# 3. Never commit the .env file to version control
# 4. Ensure proper file permissions (600) for sensitive values
# 5. Some values can be overridden by command-line arguments or code configuration
